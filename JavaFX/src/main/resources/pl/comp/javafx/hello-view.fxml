<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="5.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="pl.comp.javafx.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Choose difficulty" />
    <Button fx:id="btn1" onAction="#onButtonClick" text="Easy" />
    <Button fx:id="btn2" onAction="#onButtonClick" text="Medium" />
    <Button fx:id="btn3" onAction="#onButtonClick" text="Hard" />
</VBox>
